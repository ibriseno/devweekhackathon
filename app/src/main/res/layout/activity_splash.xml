<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.example.whatever.SplashActivity"
        android:theme="@style/AppTheme"
        android:background="@color/WhiteSmoke">


    <Button
            android:id="@+id/push_button2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/button_bg_round"
            android:padding="15dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.948"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
    <ImageView
            android:layout_width="95dp"
            android:layout_height="92dp"
            app:srcCompat="@drawable/button_bg_round"
            android:id="@+id/imageView2"
            android:background="@color/DarkSlateGray"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView2" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.445"/>
    <TextView
            android:text="TextView"
            android:layout_width="196dp"
            android:layout_height="67dp"
            android:id="@+id/textView2"
            tools:text="@tools:sample/cities"
            android:textColor="@color/DarkBlue"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15sp"


            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="28dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.397"/>
    <ImageView
            android:layout_width="95dp"
            android:layout_height="92dp"
            app:srcCompat="@drawable/color_red"
            android:id="@+id/imageView3"
            android:background="@color/DarkSlateGray" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView3" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.631"
            android:layout_marginBottom="448dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="196dp"
            android:layout_height="60dp"
            android:textColor="@color/DarkBlue"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/textView3"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="28dp"
            android:layout_marginBottom="464dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>